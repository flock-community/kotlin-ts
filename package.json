{
  "name": "@flock/kotlin-ts",
  "version": "0.0.10",
  "author": "Kasper Peulen",
  "license": "MIT",
  "repository": "https://github.com/flock-community/kotlin-ts.git",
  "main": "./index.js",
  "module": "./esm/index.js",
  "type": "module",
  "sideEffects": [],
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./index.js"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./*.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "npm t && npm run build && cd build && npm publish",
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && ts-node --project=./tsconfig.esm.json --esm scripts/prepublish.ts ",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "build:esm": "tsc -b tsconfig.esm.json",
    "build:clean": "rimraf build",
    "preinstall": "update-ruecksichtslos --caret",
    "postinstall": "tsplus-install",
    "test":  "jest --all",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@tsplus/installer": "^0.0.45",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.22",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "update-ruecksichtslos": "^0.0.17"
  },
  "prettier": {
    "printWidth": 120
  }
}
